<?xml version="1.0" encoding="UTF-8"?>
<uptime xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.uptimesoftware.com/erdc/erdc erdc"
	xmlns="http://www.uptimesoftware.com/erdc/erdc"
	xmlns:upt="http://www.uptimesoftware.com/erdc/erdc" version="4.0" target_grouping="other">
	<class>AIX errpt scan</class>
	<exec>com.uptimesoftware.uptime.erdc.MonitorCustomScriptRunner</exec>
	<erdc_version>0.1</erdc_version>
	<category>Operating System Monitors</category>
	<category_related>Advanced and Script Monitors</category_related>
	<grid_info>
		<supported_versions>7.3</supported_versions>
		<supported_platforms>windows, linux</supported_platforms>
		<upgrade_in_place>true</upgrade_in_place>
		<requires_agent_scripts>true</requires_agent_scripts>
	</grid_info>
	<elements>
		<element name="process_win" parameter_type="input" data_type="string" gui_basic="1" range_type="0">
			<control_options> size:40 </control_options>
			<default_value>plugins/scripts/monitor-aix-errrpt/run_errpt.bat</default_value>
			<short_description>Script Name</short_description>
			<long_description>Name of the script/binary/process to be executed by up.time </long_description>
			<validation_rule>
				<alphanumeric/>
			</validation_rule>
			<error_message>
				<alphanumeric>required field</alphanumeric>
			</error_message>
			<gui_type>
				<string/>
			</gui_type>
		</element>
		<element name="process_posix" parameter_type="input" data_type="string" gui_basic="1"
			range_type="0">
			<control_options> size:40 </control_options>
			<default_value>plugins/scripts/monitor-aix-errrpt/run_errpt.sh</default_value>
			<short_description>Script Name</short_description>
			<long_description>Name of the script/binary/process to be executed by up.time </long_description>
			<validation_rule>
				<alphanumeric/>
			</validation_rule>
			<error_message>
				<alphanumeric>required field</alphanumeric>

			</error_message>
			<gui_type>
				<string/>
			</gui_type>
		</element>
		<element name="PORT" parameter_type="input" data_type="integer" gui_basic="1"
			range_type="0" units="">
			<control_options>size:40</control_options>
			<default_value> 9998 </default_value>
			<short_description>Agent Port</short_description>
			<long_description>Agent port</long_description>
			<validation_rule>
				<integer/>
			</validation_rule>
			<error_message>
				<integer>The agent port must be a positive integer</integer>
			</error_message>
			<gui_type>
				<integer/>
			</gui_type>
		</element>
	<element name="OFFSET" parameter_type="input" data_type="decimal" gui_basic="1"
			range_type="0" units="">
			<control_options>size:4</control_options>
			<default_value> 1 </default_value>
			<short_description># Hours to check</short_description>
			<long_description>The # of hours back in time to check for errors</long_description>
			<validation_rule>
				<integer/>
			</validation_rule>
			<error_message>
				<integer>The # of hours offset must be a positive integer</integer>
			</error_message>
			<gui_type>
				<decimal/>
			</gui_type>
		</element>
	<group name ="checkid_grp" switch="1">
        <short_description>Match on Error ID </short_description>
  	<long_description> Match on Error ID </long_description>	
		<element name="ID" parameter_type="input" data_type="string" gui_basic="1"
			range_type="0">
			<control_options> size:12 </control_options>
			<default_value/>
			<short_description> Error ID </short_description>
			<long_description> The error ID to search for
			</long_description>
			<validation_rule/>
			<error_message/>
			<gui_type>
				<string/>
			</gui_type>
		</element>
	</group>
	<group name ="type_grp"  switch="1">
        <short_description>Match on Error String </short_description>
        <long_description>Match on Error String </long_description>
		<element name="TYPE" parameter_type="input" data_type="string" gui_basic="1" range_type="0">
			<control_options> size:40 </control_options>
			<default_value/>
			<short_description>Error Type</short_description>
			<long_description>The type of error message</long_description>
			<validation_rule/>
			<error_message/>
			<gui_type>
				<single_select type="dropdown">
					<value>Information</value>
					<value>Temporary</value>
					<value>Unknown</value>
					<value>Permanent</value>
				</single_select>
			</gui_type>
		</element>
		<element name="CLASS" parameter_type="input" data_type="string" gui_basic="1" range_type="0">
			<control_options> size:40 </control_options>
			<default_value/>
			<short_description>Error Class</short_description>
			<long_description>The class of error message</long_description>
			<validation_rule/>
			<error_message/>
			<gui_type>
				<single_select type="dropdown">
					<value>Hardware</value>
					<value>Software</value>
					<value>Errorlogger</value>
					<value>Undetermined</value>
				</single_select>
			</gui_type>
		</element>
	</group>
		<element name="IGNORE" parameter_type="input" data_type="string" gui_basic="1"
			range_type="0">
			<control_options> size:40 </control_options>
			<default_value/>
			<short_description> Ignore Error Text Matching </short_description>
			<long_description> Ignore all errors with this expression in the text 
				</long_description>
			<validation_rule/>
			<error_message/>
			<gui_type>
				<string/>
			</gui_type>
		</element>
		<element name="TEXT" parameter_type="input" data_type="string" gui_basic="1"
			range_type="0">
			<control_options> size:40 </control_options>
			<default_value/>
			<short_description> Error Search Text String </short_description>
			<long_description> Expression to search for in the error description
				</long_description>
			<validation_rule/>
			<error_message/>
			<gui_type>
				<string/>
			</gui_type>
		</element>	
	</elements>
	<help>Check AIX Errrpt logs via an agent side script 
	</help>
</uptime>
